<div class="content">
  <h1>Apps for <%= @server.name %></h1>
  <%= form_for(@server) do |f| %>
    <div class="field">
      <ul id="list">
        <% @apps.each_with_index do |a, i| %>
          <% if @server.apps.include? a %>
            <li><%= check_box_tag 'apps[]', a.name, true %><label class='my_label'><%= a.name %></label></li>
          <% else %>
            <li><%= check_box_tag 'apps[]', a.name, nil %><label class='my_label'><%= a.name %></label></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="actions">
      <%= f.submit 'Update' %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  (function(jQuery){
    var $ = jQuery;
    $(window).load(function(){

      list_columns(jQuery('#list'), 5);

    });
  })(jQuery);
</script>
